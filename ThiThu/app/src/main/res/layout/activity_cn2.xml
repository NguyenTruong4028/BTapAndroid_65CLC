<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F0F8FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="200dp"
        android:background="@drawable/banner"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/logontu"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"/>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:translationY="25dp"
                android:background="@drawable/bach_button_bg"
                android:elevation="8dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tính điểm trung bình môn học"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="26sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm giữa kỳ (50%)"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:startIconDrawable="@drawable/calculator"
        app:boxBackgroundColor="#fff"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDGK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:drawablePadding="12dp"
            android:inputType="number"
            android:hint="Điểm giữa kỳ"
            app:hintTextColor="#000000"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm cuối kỳ (50%)"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="#fff"
        app:startIconDrawable="@drawable/calculator"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDCK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:drawablePadding="12dp"
            android:inputType="number"
            app:hintTextColor="#000000"
            android:hint="Điểm cuối kỳ"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbTinhTB"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        app:cornerRadius="20dp"
        android:elevation="2dp"
        android:text="Tính điểm TB"
        android:backgroundTint="#03A9F4"
        android:textSize="18sp"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcKQ"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text= "Hiện thông báo đậu rớt"
            android:gravity="center"
            android:textSize="20dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tvTB"
        android:layout_width="350dp"
        android:layout_height="60dp"
        tools:text= "Hiện thông báo đậu rớt"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"/>
</LinearLayout>